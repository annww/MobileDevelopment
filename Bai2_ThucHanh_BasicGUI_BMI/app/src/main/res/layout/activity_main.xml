<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tinhBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính BMI"
        android:fontFamily="@font/sora_bold"
        android:textSize="32sp"
        android:textColor="@color/primary_bluewhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiều cao (cm)"
        android:fontFamily="@font/sora_medium"
        android:textSize="18sp"
        android:layout_below="@id/tinhBMI"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/inputheight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Nhập chiều cao"
        android:fontFamily="@font/sora_medium"
        android:layout_below="@id/height"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cân nặng (kg)"
        android:fontFamily="@font/sora_medium"
        android:textSize="18sp"
        android:layout_below="@id/inputheight"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/inputweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Nhập cân nặng"
        android:fontFamily="@font/sora_medium"
        android:layout_below="@id/weight"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputweight"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/radioAsian"
            android:fontFamily="@font/sora_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Châu Á" />
        <RadioButton
            android:id="@+id/radioNonAsian"
            android:fontFamily="@font/sora_medium"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không phải người Châu Á" />
    </RadioGroup>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính BMI"
        android:fontFamily="@font/sora_medium"
        android:textSize="18sp"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="30dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉ số BMI và đánh giá sẽ xuất hiện tại đây"
        android:gravity="center"
        android:fontFamily="@font/sora_medium"
        android:textSize="18sp"
        android:layout_below="@id/btnCalculate"
        android:layout_marginTop="30dp" />
</RelativeLayout>
