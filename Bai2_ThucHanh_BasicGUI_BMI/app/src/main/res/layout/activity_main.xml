<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".activityBai1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chỉ số BMI"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#004D40"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textCanNang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cân nặng (kg):"
                android:textColor="#004D40"
                android:textSize="18sp"
                android:paddingEnd="8dp" />

            <EditText
                android:id="@+id/edtCanNang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textChieuCao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chiều cao (m):"
                android:textColor="#004D40"
                android:textSize="18sp"
                android:paddingEnd="8dp" />

            <EditText
                android:id="@+id/edtChieuCao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBMI"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="Tính BMI"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtKQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Kết quả sẽ hiện ở đây"
        android:textColor="#E64A19"
        android:textSize="18sp"
        android:textStyle="italic" />
</LinearLayout>
