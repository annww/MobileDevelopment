<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonSign">
        <item name="android:fontFamily">@font/sora_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_sign</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="ContentStyle">
        <item name="android:fontFamily">@font/sora_regular</item>
        <item name="android:textColor">@color/content_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TitleStyle">
        <item name="fontFamily">@font/sora_bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="InputStyle">
        <item name="fontFamily">@font/sora_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_zoom_out</item>
    </style>
    <style name="TabSelectedTextStyle">
        <item name="android:state_selected">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>